{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.0",
  "icons": {
    "32": "chrome32.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": { "default_popup": "index.html" },
  "permissions": ["scripting"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
